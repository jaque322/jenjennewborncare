@model jenjennewborncare.ViewModels.ScheduleViewModel
@if (User.IsInRole("admin"))
{
    

    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_BackendLayout.cshtml";

}else

{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}
@if (@TempData["alertMessage"]!=null)
{
<div class="alert alert-success" style="margin-top:4px">
    <strong>Sucess @TempData["alertMessage"]</strong>
</div>
    
}
<h1>Create</h1>

<h4>Schedule Your Services</h4>
<hr />
<form asp-action="Create">
    <div class="row">
        <div class="col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input type="tel" required asp-for="PhoneNumber" class="form-control" pattern="^\d{3}\d{3}\d{4}$" title="Phone number must be in the format: 1234567890, 10 digits" />

                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div> 
            
            <div class="form-group">
                <label asp-for="StartTime" class="control-label"></label>
                <input required asp-for="StartTime" class="form-control" />
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndTime" class="control-label"></label>
                <input required asp-for="EndTime" class="form-control" />
                <span asp-validation-for="EndTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<label asp-for="UserId" class="control-label"></label>*@
                <input type="hidden" asp-for="UserId" value="@ViewData["UserId"]" />
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label>Services</label>
                <div id="servicesCheckboxes">
                    @if (ViewBag.Services == null)
                    {
                        <div class="alert alert-danger">
                            Services data is not available.
                        </div>
                    }
                    else
                    {
                        foreach (var service in ViewBag.Services)
                        {
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="ServiceIds" value="@service.Value" id="service_@service.Value" />
                                <label class="form-check-label" for="service_@service.Value">@service.Text</label>
                            </div>
                        }
                    }

                </div>
            </div>
        </div>
    </div>
    <div class="form-group mt-3">
        <input type="submit" value="Create" class="btn btn-primary" id="createButton" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>
@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const checkboxes = document.querySelectorAll("#servicesCheckboxes .form-check-input");
            const createButton = document.getElementById("createButton");

            function updateCreateButton() {
                const isAnyChecked = Array.from(checkboxes).some(checkbox => checkbox.checked);
                createButton.disabled = !isAnyChecked;
            }

            checkboxes.forEach(checkbox => {
                checkbox.addEventListener("change", updateCreateButton);
            });

            // Initialize the button state
            updateCreateButton();
        });
    </script>
}
