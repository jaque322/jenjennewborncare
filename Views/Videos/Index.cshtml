@model IEnumerable<jenjennewborncare.Models.Video>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_BackendLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>images</th>
            <th>
                @Html.DisplayNameFor(model => model.YouTubeVideoId)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>

                    <img src="@($"https://img.youtube.com/vi/{item.YouTubeVideoId}/hqdefault.jpg")" alt="Video preview" width="120" height="90" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.YouTubeVideoId)
                </td>
                <td  >
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    @*<a asp-action="Details" asp-route-id="@item.Id">Details</a> |*@
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
