@using jenjennewborncare.ViewModels;
@model IEnumerable<Image>
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_BackendLayout.cshtml";
}
<h1>Images</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Upload New Image</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var image in Model)
        {
            <tr>
                <td>@image.Title</td>
                <td>
                    <img src="~/uploads/@image.FileName" alt="@image.Title" width="100" height="100" />
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@image.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@image.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
